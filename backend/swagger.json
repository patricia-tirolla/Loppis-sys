{
    "openapi": "3.0.4",
    "info": {
        "title": "Loppis-sys API",
        "description": "API for a leaf market",
        "version": "1.0.0"
    },
    "tags": [
        {
            "name": "auth"
        },
        {
            "name": "sellers"
        }
    ],
    "servers": [
        {
            "url": "/"
        }
    ],
    "paths": {
        "/auth": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Return a JWT access token",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Access token created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sellers": {
            "get": {
                "tags": [
                    "sellers"
                ],
                "summary": "Returns a list of sellers.",
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "phone": {
                                                "type": "number"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "jwtAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "jwtAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}